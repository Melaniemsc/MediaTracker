<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>
    <link rel="stylesheet" href="/stylesheets/main.css" />

</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <div id="general-div">
    <h1>Searh</h1>
    <p>Tell us what are you looking for <%= user.username %>!</p>
    <form action="/search/results" method="GET">
        <label for="search">Search Here:</label>
        <input type="text" name="search" id="search" required /><br>
        <button type="submit" id="search-button" >Search</button>
    </form>
    <% if(typeof resultList != 'undefined' && resultList.length > 0){ %>
    <% resultList.forEach(book => { %>
        <article class="card">
            <div class="img-placeholder">
                <img src = "<%= book.image %>">
            </div>
            <a href="/home/book/<%= book._id %>"><%= book.name %></a>
          </article>
    <% }) %>
    <% } %>
    </div>
</body>
</html>