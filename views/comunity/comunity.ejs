<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comunity</title>
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Permanent+Marker&family=Poiret+One&family=Poller+One&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class ="general-div">
        <h1>Latest bookReviews</h1>
        <h2>Books Reviews</h2>
        <div id="reviews-section">
            <% if (typeof message !== 'undefined') { %>
                <p class="error-message"><%= message %></p>
                <% } %>
            <% if (typeof bookReviews !== "undefined" && bookReviews.length > 0) { %>
                <ul class="review-list">
                    <% bookReviews.forEach(review => { %>
                        <li class="review-item">
                            <a href="/tracker/book/<%= review.bookId%>" class="book-name"><strong><%= review.book %></strong></a>
                            <p><strong>Review: </strong><%= review.latestReview.text %></p>
                            <p><%= review.reviewTime %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="no-bookReviews">No reviews available</p>
            <% } %>
        </div>
        <h2>Movies Reviews</h2>
        <div id="reviews-section">
            <% if (typeof movieReviews !== "undefined" && movieReviews.length > 0) { %>
                <ul class="review-list">
                    <% movieReviews.forEach(review => { %>
                        <li class="review-item">
                            <a href="/tracker/movie/<%= review.bookId%>" class="movie-name"><strong><%= review.movie %></strong></a>
                            <p><strong>Review: </strong><%= review.latestReview.text %></p>
                            <p><%= review.reviewTime %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="no-movieReviews">No reviews available</p>
            <% } %>
        </div>
    </div>
</body>
</html>